    <script type="text/javascript">
        var RK_MEDIA_URL = "http://i.rekoo.com/static/mixi/farm";
        var RK_BASE_URL = "http://mxfarm.rekoo.com";
        var _app_id = "7157";

        function init() {
            //判断用户在哪个view(home, profile, canvas)
            var currentview = gadgets.views.getCurrentView();
            if (currentview.getName() == "profile") {
                var html = "<div align='center'><p><img src='"+RK_MEDIA_URL+"/images/aha3.jpg'></p>";
                html += "<a href='http://mixi.jp/view_appli.pl?id="+_app_id+"' target='_blank'>サンシャイン牧場</a>";
                html += "</div>";
                jQuery("#rk_all").html(html);
                gadgets.window.adjustHeight(150);
                return;
            } else if (currentview.getName() == "home") {
                var html = "<div align='center'><p><img src='"+RK_MEDIA_URL+"/images/aha3.jpg'></p>";
                html += "<a href='http://mixi.jp/run_appli.pl?id="+_app_id+"' target='_blank'>サンシャイン牧場</a>";
                html += "</div>";
                jQuery("#rk_all").html(html);
                gadgets.window.adjustHeight(150);
                return;
            }

            load_apps();
        }

        gadgets.util.registerOnLoadHandler(init);
    </script>
